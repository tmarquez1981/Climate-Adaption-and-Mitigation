@{
    ViewBag.Title = "Add a data point";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Add data</h2>
        <form method="post">
            <span asp-validation-summary="ModelOnly"></span>

            <div class="form-group">
                <label>New Institution</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Longititude</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Latitude</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Organization Affiliation</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Information about the location</label>
                <textarea cols="40" rows="4" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <a asp-controller="Home" asp-action="" class="btn btn-default">Cancel</a>
                <input type="submit" value="Create New Lesson" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>